<?xml version="1.0" encoding="utf-8"?>
<greenburst>
  <pipeline>sps</pipeline>
  <modules>
    <rfim>
      <rfim_sum_threshold>
        <active>false</active>
        <its_cutoff>6</its_cutoff>
        <base_sensitivity>1</base_sensitivity>
        <window>0</window>
      </rfim_sum_threshold>
    </rfim>
    <sps>
      <threshold>7.5</threshold>
      <dedispersion_samples>327680</dedispersion_samples> <!--a sample is a spectrum, nchan * bits * dedispersion_samples be the size of the GPU memory-->
      <astroaccelerate/>
      <dedispersion>
        <start>1</start>
        <end>10240</end>
        <step>1</step>
      </dedispersion>
    </sps>
  </modules>
  <sink>
    <channel>sps</channel>
    <channels>
      <rfim>
        <active>false</active>
        <sink>
          <id>sigproc-rfi</id>
        </sink>
      </rfim>
      <sps>
        <active>true</active>
        <sink>
          <id>sigproc-sps</id>
        </sink>
        <sink>
          <id>spccl</id>
        </sink>
      </sps>
    </channels>
    <sigproc>
      <id>sigproc-sps</id>
      <dir>/ldata/cheetah_tests/sps/</dir>
    </sigproc>
    <sigproc>
      <id>sigproc-rfi</id>
      <dir>/ldata/cheetah_tests/rfim/</dir>
    </sigproc>
    <spccl_files>
      <id>spccl</id>
      <dir>/ldata/cheetah_tests/spccl/</dir>
    </spccl_files>
  </sink>
  <source>
    <spectrums_per_chunk>131072</spectrums_per_chunk> <!--this needs to be tuned-->
    <sigproc>
    </sigproc>
  </source>
</greenburst>
